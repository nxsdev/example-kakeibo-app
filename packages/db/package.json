{
  "name": "@example-kakeibo-app/db",
  "type": "module",
  "exports": {
    ".": {
      "default": "./src/index.ts"
    },
    "./schema": {
      "default": "./src/schema/index.ts"
    },
    "./schema/*": {
      "default": "./src/schema/*.ts"
    },
    "./migrations/*": {
      "default": "./src/migrations/*.ts"
    }
  },
  "scripts": {
    "db:generate": "drizzle-kit generate && node scripts/bundle-migrations.ts"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@example-kakeibo-app/config": "workspace:*",
    "drizzle-kit": "^0.31.8",
    "typescript": "catalog:"
  }
}
